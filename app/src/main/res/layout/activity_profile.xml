<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLoginBackground7"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.umbc.cmsc.hopin.ProfileActivity">


        <EditText
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_name"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_email"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_street"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edit_city"
            android:layout_below="@+id/edit_city"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_state"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_zip"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/edit_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White"
            android:layout_below="@+id/edit_phone"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edit_driver_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White"
            android:layout_below="@+id/edit_specs"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edit_specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/White"
            android:layout_below="@+id/edit_vehicle"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/street_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_email"
            android:text="Street"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/email_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_name"
            android:text="Email"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/vehicle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_phone"
            android:text="Vehicle"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/specs_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_vehicle"
            android:text="Vehicle Specs"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/driver_rider_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver/Rider"
            android:textColor="@color/White"
            android:layout_below="@+id/edit_specs"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/phone_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_zip"
            android:text="Phone #"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/zip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_state"
            android:text="zipcode"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/state_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_city"
            android:text="State"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/city_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_street"
            android:text="City"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/fullname_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/edit_name"
            android:text="Name"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/back_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/White"
            android:layout_below="@+id/edit_driver_rider"
            android:layout_toEndOf="@+id/driver_rider_view"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Profile Information"
            android:textColor="@color/White"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/driver_rider_view" />


</RelativeLayout>
